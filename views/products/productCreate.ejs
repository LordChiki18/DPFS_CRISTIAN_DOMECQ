<!DOCTYPE html>
<html lang="es">
<% include ../partials/head.ejs %>

    <body>
        <!-- Header -->
        <% include ../partials/header.ejs %>

            <!-- Formulario de Producto -->
            <section class="form-section-products">
                <div class="container">
                    <div class="form-container-products">
                        <h2 class="form-title-products">Administrar Contenido Digital</h2>

                        <form action="/products/store" method="POST" enctype="multipart/form-data">
                            <!-- Campo oculto para ID del contenido (para edici칩n) -->
                            <input type="hidden" id="contentId" name="contentId" value="">
                            <!-- T칤tulo del Contenido -->
                            <div class="form-group-products">
                                <label for="title">T칤tulo *</label>
                                <input type="text" id="title" name="title" required
                                    placeholder="Ingrese el t칤tulo del contenido">
                            </div>

                            <!-- Descripci칩n -->
                            <div class="form-group-products">
                                <label for="description">Descripci칩n *</label>
                                <textarea id="description" name="description" required
                                    placeholder="Describa el contenido, qu칠 aprender치n los estudiantes, etc."></textarea>
                            </div>

                            <!-- Tipo de Contenido -->
                            <div class="form-group-products">
                                <label for="category">Tipo de Contenido *</label>
                                <select id="category" name="category" required>
                                    <option value="">Seleccione el tipo de contenido</option>
                                    <option value="course">Curso</option>
                                    <option value="music">M칰sica</option>
                                    <option value="ebook">E-book</option>
                                </select>
                            </div>

                            <!-- Categor칤a y Precio -->
                            <div class="form-row-products">
                                <div class="form-group">
                                    <label for="price">Precio (PYG) *</label>
                                    <input type="number" id="price" name="price" step="0.01" min="0" required
                                        placeholder="0.00">
                                </div>
                                <div class="form-group">
                                    <label for="discount">Descuento</label>
                                    <input type="number" id="discount" name="discount" min="0" placeholder="Ej: 25">
                                </div>
                            </div>

                            <!-- Estado y Disponibilidad -->
                            <div class="form-row-products">
                                <div class="form-group-products">
                                    <label for="stock">Estado del Contenido</label>
                                    <select id="stock" name="stock">
                                        <option value="1">Activo</option>
                                        <option value="0">Inactivo</option>
                                    </select>
                                </div>
                            </div>

                            <!-- Tags/Etiquetas -->
                            <div class="form-group-products">
                                <label for="author">Author *</label>
                                <input type="text" id="author" name="author" required placeholder="Nombre del autor">
                                <label for="tags">Etiquetas (separadas por comas)</label>
                                <input type="text" id="tags" name="tags"
                                    placeholder="programaci칩n, javascript, web development">
                                <small style="color: #666; font-size: 0.8rem;">Ayuda a los usuarios a encontrar tu
                                    contenido</small>
                            </div>



                            <!-- Im치genes/Portada -->
                            <div class="form-group-products">
                                <label for="images">Imagen de Portada y Galer칤a</label>
                                <div class="image-upload-container">
                                    <input type="file" id="images" name="images" multiple accept="image/*">
                                    <p style="font-size: 0.8rem; color: #666; margin-top: 5px;">
                                        Formatos soportados: JPG, PNG. Recomendado: 800x600px para portada.
                                    </p>
                                </div>
                                <div class="image-preview" id="imagePreview"></div>
                            </div>

                            <div class="form-group-products">
                                <label for="format">Formato del Contenido</label>
                                <select id="format" name="format">
                                    <option value="video">Video</option>
                                    <option value="audio">Audio</option>
                                    <option value="document">Documento</option>
                                    <option value="ebook">E-book</option>
                                </select>
                            </div>

                            <input type="hidden" id="createdAt" name="createdAt"
                                value="<%= new Date().toISOString() %>">
                            <input type="hidden" id="updatedAt" name="updatedAt"
                                value="<%= new Date().toISOString() %>">
                            <input type="hidden" name="oldPrice" step="0.01" value="0">


                            <!-- Botones de Acci칩n -->
                            <div class="form-actions-products">
                                <button type="submit" class="btn btn-primary-products">游 Guardar Contenido</button>
                                <button type="button" class="btn btn-secondary-products" onclick="resetForm()">游댃
                                    Limpiar Formulario</button>
                                <a href="/products" class="btn btn-secondary-products">游늶 Ver Lista de Contenidos</a>
                            </div>
                        </form>
                    </div>
                </div>
            </section>


            <!-- Footer -->
            <% include ../partials/footer.ejs %>
    </body>

    <script>
        // Funci칩n para limpiar el formulario
        function resetForm() {
            document.getElementById('contentId').value = '';
            document.getElementById('title').value = '';
            document.getElementById('description').value = '';
            document.getElementById('category').value = '';
            document.getElementById('price').value = '';
            document.getElementById('discount').value = '';
            document.getElementById('stock').value = '1';
            document.getElementById('featured').value = '0';
            document.getElementById('author').value = '';
            document.getElementById('tags').value = '';
            document.getElementById('images').value = '';
            document.getElementById('imagePreview').innerHTML = '';
            document.getElementById('format').value = 'video';
        }

        // Manejo de la carga de im치genes
        const imageInput = document.getElementById('images');

    </script>



</html>