<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

  <body>
    <!-- Header -->
    <%- include('../partials/header.ejs') %>


      <!-- Sign In Section -->
      <section class="form-section">
        <div class="form-container">
          <h2 class="form-title">Sign In</h2>
          <% if (error) { %>
            <div class="error-message">
              <p style="color: red;">
                <%= error %>
              </p>
            </div>
            <% } %>


              <form action="/users/login" method="POST">


                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" id="email" name="email" placeholder="Email">
                </div>

                <div class="form-group">
                  <label for="password">Password</label>
                  <input type="password" id="password" name="password" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-register">Sign In</button>
              </form>

              <div class="forgot-password">
                <a href="/users/forgot-password">I forgot my password</a>
              </div>

              <div class="new-customer">
                <p>I am a new customer and want to create an account.</p>
                <button type="button" class="btn btn-secondary" onclick="window.location.href='#create-account'">Create
                  Account</button>
              </div>
        </div>
      </section>

      <!-- Footer -->
      <%- include('../partials/footer.ejs') %>

  </body>

</html>