<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

  <body>
    <!-- Header -->
    <%- include('../partials/header.ejs') %>


      <!-- Sign In Section -->
      <section class="form-section">
        <div class="form-container">
          <h2 class="form-title">Iniciar Sesion</h2>
          <% if (error) { %>
            <div class="error-message">
              <p style="color: red;">
                <%= error %>
              </p>
            </div>
            <% } %>


              <form action="/users/login" method="POST">


                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" id="email" name="email" placeholder="Email">
                </div>

                <div class="form-group">
                  <label for="password">Contraseña</label>
                  <input type="password" id="password" name="password" placeholder="Password">
                </div>

                <button type="submit" class="btn btn-register">Iniciar Sesion</button>
              </form>
              <br>
              <div class="forgot-password">
                <a href="/users/forgot-password">Olvide mi Contraseña</a>
              </div>

              <div class="new-customer">
                <p>Eres nuevo y quieres crear tu cuenta?.</p>
                <a href="/users/register"> 
                <button type="button" class="btn btn-secondary">Crear Cuenta</button>
                </a>
              </div>
        </div>
      </section>

      <!-- Footer -->
      <%- include('../partials/footer.ejs') %>

  </body>

</html>