<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head.ejs') %>

  <body>
    <!-- Header -->
    <%- include('../partials/header.ejs') %>


      <!-- Sign In Section -->
      <section class="form-section">
        <div class="form-container">
          <h2 class="form-title">Iniciar Sesion</h2>
              <form action="/users/login" method="POST">


                <div class="form-group">
                  <label for="email">Email</label>
                  <input type="email" name="email" value="<%= oldData?.email || '' %>" />
                  <% if (errors?.email) { %>
                    <p style="color: red;">
                      <%= errors.email.msg %>
                    </p>
                    <% } %>
                </div>

                <div class="form-group">
                  <label for="password">Contraseña</label>
                  <input type="password" name="password" />
                  <% if (errors?.password) { %>
                    <p style="color: red;">
                      <%= errors.password.msg %>
                    </p>
                    <% } %>
                </div>
                <% if (errors?.general) { %>
                  <div class="error-message">
                    <p style="color: red;">
                      <%= errors.general.msg %>
                    </p>
                  </div>
                  <% } %>

                    <button type="submit" class="btn btn-register">Iniciar Sesion</button>
              </form>
              <br>
              <div class="forgot-password">
                <a href="/users/forgot-password">Olvide mi Contraseña</a>
              </div>

              <div class="new-customer">
                <p>Eres nuevo y quieres crear tu cuenta?.</p>
                <a href="/users/register">
                  <button type="button" class="btn btn-secondary">Crear Cuenta</button>
                </a>
              </div>
        </div>
      </section>

      <!-- Footer -->
      <%- include('../partials/footer.ejs') %>

  </body>

</html>